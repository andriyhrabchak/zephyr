/dts-v1/;

#include <espressif/esp32/esp32_wroom_32ue_n8.dtsi>
#include "esp32_mtsatlan_b-pinctrl.dtsi"

/ {
	model = "F&F 'MTSATLAN/B' board with ESP32-WROOM-32E PROCPU";
	compatible = "espressif,esp32-wroom-32e", "espressif,esp32";

	aliases {
		uart-0 = &uart0;
		i2c-0 = &i2c0;
		watchdog0 = &wdt0;
	};

	chosen {
		zephyr,sram = &sram0;
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
	};

  inputs {
		compatible = "gpio-keys";
		input_1: input_1 {
			gpios = <&gpio1 3 GPIO_ACTIVE_LOW>;
			label = "IN1 COUPLER";
		};
		input_2: input_2 {
			gpios = <&gpio1 2 GPIO_ACTIVE_LOW>;
			label = "IN2 COUPLER";
		};
		input_3: input_3 {
			gpios = <&gpio1 7 GPIO_ACTIVE_LOW>;
			label = "IN3 COUPLER";
		};
		input_4: input_4 {
			gpios = <&gpio1 4 GPIO_ACTIVE_LOW>;
			label = "IN4 COUPLER";
		};
	};

	fstab {
		compatible = "zephyr,fstab";
		lfs: lfs_storage_partition {
			compatible = "zephyr,fstab,littlefs";
			mount-point = "/LFS:";
			partition = <&storage_partition>;
			automount;
			read-size = <16>;
			prog-size = <16>;
			cache-size = <64>;
			lookahead-size = <32>;
			block-cycles = <512>;
		};
	};
};

&uart0 {
	status = "okay";
	current-speed = <115200>;
	pinctrl-0 = <&uart0_default>;
	pinctrl-names = "default";
};

&uart1 {
	status = "okay";
	current-speed = <9600>;
	pinctrl-0 = <&uart1_default>;
	pinctrl-names = "default";
};

&gpio0 {
	status = "okay";
};

&gpio1 {
	status = "okay";
};

&i2c0 {
	status = "okay";
	clock-frequency = <I2C_BITRATE_STANDARD>;
	sda-gpios = <&gpio1 1 GPIO_OPEN_DRAIN>;
	scl-gpios = <&gpio1 0 GPIO_OPEN_DRAIN>;
	pinctrl-0 = <&i2c0_default>;
	pinctrl-names = "default";
};

&spi2 {
  #address-cells = <1>;
  #size-cells = <0>;
  pinctrl-0 = <&spim2_default>;
  pinctrl-names = "default";
  status = "okay";
  sd0: sd@0 {
    compatible = "zephyr,sdhc-spi-slot";
    reg = <0>;
    status = "okay";
    spi-max-frequency = <20000000>;
    mmc {
      compatible = "zephyr,sdmmc-disk";
      status = "okay";
    };
  };
};

&mdio {
	pinctrl-0 = <&mdio_default>;
	pinctrl-names = "default";
	ref-clk-output-gpios = <&gpio0 17 0>;
	status = "okay";

	phy: ethernet-phy@1 {
		compatible = "ethernet-phy";
		status = "okay";
		reg = <1>;
	};
};

&eth {
	phy-handle = <&phy>;
	ref-clk-output-gpios = <&gpio0 17 0>;
	phy-connection-type = "rmii";
	status = "okay";
};

&esp32_bt_hci {
	status = "disabled";
};

&timer0 {
	status = "okay";
};

&timer1 {
	status = "okay";
};

&timer2 {
	status = "okay";
};

&timer3 {
	status = "okay";
};

&trng0 {
	status = "okay";
};

&psram0 {
	status = "disabled";
};

&flash0 {
	status = "okay";
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		/* Reserve 60kB for the bootloader */
		boot_partition: partition@1000 {
			label = "mcuboot";
			reg = <0x00001000 0x0000F000>;
			read-only;
		};

		/* Reserve 1024kB for the application in slot 0 */
		slot0_partition: partition@10000 {
			label = "image-0";
			reg = <0x00010000 0x00100000>;
		};

		/* Reserve 1024kB for the application in slot 1 */
		slot1_partition: partition@110000 {
			label = "image-1";
			reg = <0x00110000 0x00100000>;
		};

		/* Reserve 256kB for the scratch partition */
		scratch_partition: partition@210000 {
			   label = "image-scratch";
			   reg = <0x00210000 0x00040000>;
		};
    
		storage_partition: partition@250000 {
			label = "storage";
			reg = <0x00250000 0x00500000>;
		};

  };
};
